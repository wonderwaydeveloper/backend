APP_NAME=Microblogging
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# Email Configuration
EMAIL_VERIFICATION_EXPIRE=15
PASSWORD_RESET_EXPIRE=15

APP_LOCALE=fa
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=14

# JWT Configuration - CHANGE IN PRODUCTION
JWT_SECRET=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=86400

# Security Configuration
SECURITY_WAF_ENABLED=true
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_THREAT_THRESHOLD=50
SECURITY_IP_BLOCK_DURATION=3600

# Age Restrictions
MINIMUM_AGE=15
CHILD_AGE_THRESHOLD=18

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=microblogging
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=microblogging_

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-username
MAIL_PASSWORD=your-password
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

FIREBASE_API_KEY=
FIREBASE_PROJECT_ID=
FIREBASE_CREDENTIALS_PATH=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/social/google/callback



MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

SENTRY_LARAVEL_DSN=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Elasticsearch
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_INDEX=microblogging
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# CDN Configuration
CDN_ENABLED=false
CDN_IMAGES_URL=https://cdn-images.microblogging.com
CDN_VIDEOS_URL=https://cdn-videos.microblogging.com
CDN_STATIC_URL=https://cdn-static.microblogging.com
AWS_CLOUDFRONT_DISTRIBUTION_ID=

# GraphQL
GRAPHQL_ENABLED=true
GRAPHQL_ENDPOINT=/graphql
GRAPHQL_PLAYGROUND=false
